@functions {
    public string IsPageActive(string controller, string action)
    {
        string isActive = "";

        if (Context.Request.RouteValues["controller"]!.ToString() == controller && Context.Request.RouteValues["action"]!.ToString() == action)
        {
            isActive = "current";
        }

        return isActive;
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;400;500;600;700&display=swap" rel="stylesheet">
    <title>@ViewData["Title"] - TicketFlare</title>
    <link rel="stylesheet" href="~/css/visitor-site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="nav-logo-container">
                <h1 class="logo-name">TicketFlare</h1>
            </div>
            <div class="nav-list-container">
                <ul class="nav-list">
                    <li>
                        <a class="nav-btn" asp-area="" asp-controller="VisitorHome" asp-action="Index">
                            <p class="text-glow-white @IsPageActive("VisitorHome", "Index")">Home</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-btn" asp-area="" asp-controller="VisitorEvents" asp-action="Index">
                            <p class="text-glow-white @IsPageActive("VisitorEvents", "Index")">Events</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-btn" asp-area="" asp-controller="VisitorHome" asp-action="About">
                            <p class="text-glow-white @IsPageActive("VisitorHome", "About")">About</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-btn" asp-area="" asp-controller="VisitorHome" asp-action="Contact">
                            <p class="text-glow-white @IsPageActive("VisitorHome", "Contact")">Contact</p>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="nav-user-container">
                <a class="nav-user pill-box" asp-area="" asp-controller="VisitorHome" asp-action="Login">
                    <p>Sign in</p>
                </a>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" id="main-container">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>